# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values
# NEVER commit terraform.tfvars with real credentials to git

# Google Cloud Configuration
gcp_project_id = "your-gcp-project-id"
gcp_region     = "us-central1"

# GitHub Configuration
github_repo = "lnwu/learning-english"

# Vercel Configuration
# Get these from: https://vercel.com/account/tokens
vercel_token       = "your-vercel-api-token"
vercel_org_id      = "your-vercel-org-id"
vercel_project_id  = "your-vercel-project-id"
vercel_project_name = "learning-english"

# NextAuth Configuration
# Generate auth_secret with: openssl rand -base64 32
auth_secret        = "your-auth-secret-here"
auth_google_id     = "your-google-oauth-client-id"
auth_google_secret = "your-google-oauth-client-secret"

# Firebase Configuration
# Get these from Firebase Console: https://console.firebase.google.com/
firebase_project_id          = "your-firebase-project-id"
firebase_api_key             = "your-firebase-api-key"
firebase_auth_domain         = "your-project.firebaseapp.com"
firebase_storage_bucket      = "your-project.firebasestorage.app"
firebase_messaging_sender_id = "your-messaging-sender-id"
firebase_app_id              = "your-firebase-app-id"
firebase_measurement_id      = "your-measurement-id"
