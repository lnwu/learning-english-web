rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific word collections
    // Each user can only read/write their own words
    match /users/{userId}/words/{wordId} {
      // Allow authenticated users to access only their own data
      // userId is the user's email address (as used in the application)
      allow read, write: if request.auth != null 
                         && request.auth.token.email == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
